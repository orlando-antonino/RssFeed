<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orlando.rssfeed"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/launchc"
        android:label="@string/app_name" >
        <activity
            android:name="com.orlando.rssfeed.RssFeed"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.orlando.rssfeed.FeedSvc" />

        <activity
            android:name="com.orlando.rssfeed.Detail"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name="com.orlando.rssfeed.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>